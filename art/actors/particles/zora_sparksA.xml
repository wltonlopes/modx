<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/zora_sparksA.dds</texture>
    <blend mode="add"/>

    <constant name="emissionrate" value="37.0"/>
    <uniform name="lifetime" min="0.1" max="0.3"/>

	<constant name="position.z" value="-0.2"/>
	<constant name="position.x" value="-0.2"/>
	<constant name="position.y" value="0.2"/>
	
    <uniform name="angle" min="-1.5" max="1.5"/>

    <uniform name="velocity.x" min="-0.0" max="0.1"/>
    <uniform name="velocity.y" min="0.0" max="0.1"/>
    <uniform name="velocity.z" min="-0.0" max="0.1"/>
    <uniform name="velocity.angle" min="-0.0" max="0.1"/>

    <uniform name="size" min="3.5" max="4.25"/>

    <uniform name="color.r" min="0.8" max="1.0"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>

</particles>
