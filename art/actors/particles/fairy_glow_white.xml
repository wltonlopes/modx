    <uniform name="velocity.angle" min="-0.10" max="0.10"/>

    <uniform name="size" min="0.6" max="0.8"/>
	
    <uniform name="color.b" min="9.8" max="10.0"/>
    <copy name="color.g" from="color.b"/>
